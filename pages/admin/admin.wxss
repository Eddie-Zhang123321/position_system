.container {
  padding: 30rpx;
  background: #f5f5f5;
}

.page-header .title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
}

.page-header .subtitle {
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
  margin-bottom: 20rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

.loading-box {
  display: flex;
  align-items: center;
  gap: 12rpx;
  color: #666;
  padding: 12rpx 0;
}