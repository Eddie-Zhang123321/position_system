.container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.login-card {
  width: 80%;
  background-color: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.auth-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background-color: #f2f2f2;
  color: #333;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.login-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background-color: #4A90E2;
  color: white;
  font-size: 28rpx;
}

.login-btn.disabled {
  background-color: #a0cfff;
  color: #ffffff;
}

.tip {
  margin-top: 40rpx;
  font-size: 24rpx;
  color: #999;
}

.hidden {
  display: none;
}
