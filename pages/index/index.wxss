page {
  background: #f5f5f5;
}

.container {
  padding: 30rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.avatar-lg {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.auth-tip {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  color: #666;
  font-size: 26rpx;
}

.profile-row {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar-wrapper {
  padding: 0;
  border: none;
  background: transparent;
}

.nickname-input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 12rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.header-card .title {
  font-size: 40rpx;
  color: #333;
  font-weight: 700;
}

.header-card .subtitle {
  margin-top: 6rpx;
  font-size: 28rpx;
  color: #666;
}

.row {
  display: flex;
  align-items: center;
}

.space-between {
  justify-content: space-between;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.shortcut-grid {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 16rpx;
}

.records-card .van-cell {
  padding-left: 0;
  padding-right: 0;
}

.loading-box {
  display: flex;
  align-items: center;
  gap: 12rpx;
  color: #666;
}
